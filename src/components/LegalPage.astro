<style>
  .legal-content {
    @apply text-base leading-7 text-muted;
  }
  
  .legal-content h2 {
    @apply text-xl mt-8 font-semibold;
  }
  
  .legal-content p {
    @apply mb-4;
  }
  
  .legal-content ul {
    @apply list-disc pl-6 space-y-1;
  }
  
  .legal-content strong {
    @apply text-white font-semibold;
  }
</style>
